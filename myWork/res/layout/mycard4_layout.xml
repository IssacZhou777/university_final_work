<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/xml_common_cardbg"
            android:padding="10dp"
            android:gravity="center">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card4"
            android:orientation="vertical">
        <RelativeLayout
                android:id="@+id/part_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="40dp">
            <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26sp"
                    android:textColor="@color/white"
                    android:text=""/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="50dp"
                >
            <TextView
                    android:id="@+id/organization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="20sp"
                    android:text=""
                    android:textColor="@color/card4_text"
                    android:singleLine="true"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginRight="40dp"
                    android:layout_below="@id/organization"
                    android:background="@color/card4_text"/>

            <LinearLayout
                    android:id="@+id/part_add"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/organization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add :"
                        android:textColor="@color/card4_text"
                        android:textSize="@dimen/text_size_16sp"/>
                <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/common_university_add"
                        android:textColor="@color/card4_text"
                        android:textSize="@dimen/text_size_16sp"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/part_tel"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/part_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tel :"
                        android:textColor="@color/card4_text"
                        android:textSize="@dimen/text_size_16sp"/>
                <TextView
                        android:id="@+id/telephone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/card4_text"
                        android:textSize="@dimen/text_size_16sp"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/part_email"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/part_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email :"
                        android:textColor="@color/card4_text"
                        android:textSize="@dimen/text_size_16sp"/>
                <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/card4_text"
                        android:textSize="@dimen/text_size_16sp"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/part_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job :"
                        android:textColor="@color/card4_text"
                        android:textSize="@dimen/text_size_16sp"/>
                <TextView
                        android:id="@+id/job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/android_dev"
                        android:textColor="@color/card4_text"
                        android:textSize="@dimen/text_size_16sp"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
    </LinearLayout>
