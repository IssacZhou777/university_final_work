<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:genius="http://schemas.android.com/apk/res-auto"
              xmlns:app="http://schemas.android.com/apk/res/edu.jiangnan.dm"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff"
              android:padding="4dp"
        >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/xml_add_contact_bg">

        <net.qiujuer.genius.widget.GeniusTextView
                android:id="@+id/table_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:textSize="24sp"
                app:g_theme="@array/Dark"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            <android.support.v4.view.ViewPager
                    android:id="@+id/table_viewpage"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                <View
                        android:id="@+id/dot0"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_margin="2dp"
                        android:clickable="true"
                        android:background="@drawable/viewpage_dot_grey"/>

                <View
                        android:id="@+id/dot1"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_margin="2dp"
                        android:clickable="true"
                        android:background="@drawable/viewpage_dot_grey"/>

                <View
                        android:id="@+id/dot2"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_margin="2dp"
                        android:clickable="true"
                        android:background="@drawable/viewpage_dot_grey"/>
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

    <Button
            android:id="@+id/choose_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/xml_selector_btn_bg"
            android:text="@string/btn_choose_table"/>

</LinearLayout>