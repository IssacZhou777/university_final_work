<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/container"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#80000000"
              android:gravity="center"
              android:paddingLeft="5dp"
              android:paddingRight="5dp">

    <LinearLayout
            android:id="@+id/student"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@drawable/card1"
            android:gravity="bottom"
            android:visibility="gone">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about_my_name"
                        android:layout_centerInParent="true"
                        android:textColor="#0d226a"
                        android:textSize="18sp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name"
                        android:layout_alignLeft="@id/name"
                        android:text="@string/common_student"
                        android:textColor="#0d226a"
                        android:textSize="12sp"
                        android:singleLine="true"
                        />

            </RelativeLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TEL :"
                            android:textColor="#0d226a"
                            android:textSize="@dimen/card1_right_text_size"/>
                    <TextView
                            android:id="@+id/telephone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18262280912"
                            android:textColor="#0d226a"
                            android:textSize="@dimen/card1_right_text_size"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email :"
                            android:textColor="#0d226a"
                            android:textSize="@dimen/card1_right_text_size"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1980586727@qq.com"
                            android:textColor="#0d226a"
                            android:textSize="@dimen/card1_right_text_size"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Organ :"
                            android:textColor="#0d226a"
                            android:textSize="@dimen/card1_right_text_size"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/common_jiangnandaxue"
                            android:textColor="#0d226a"
                            android:textSize="@dimen/card1_right_text_size"/>

                </LinearLayout>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ADD :"
                            android:textColor="#0d226a"
                            android:textSize="@dimen/card1_right_text_size"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/common_university_add"
                            android:textColor="#0d226a"
                            android:textSize="@dimen/card1_right_text_size"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


        <LinearLayout
                android:id="@+id/tutor"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/card2"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="40dp">
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">
                    <TextView
                            android:id="@+id/organization"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/bg_card2"
                            android:textSize="@dimen/card2_h1"
                            android:singleLine="true"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:paddingRight="15dp"
                            android:text="@string/common_digital_media"/>
                </LinearLayout>


                <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                    <TextView
                            android:id="@+id/tname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="@string/common_tutor_name"
                            android:textColor="@color/bg_card2"
                            android:textSize="18sp"/>
                    <TextView
                            android:id="@+id/job"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tname"
                            android:layout_marginLeft="8dp"
                            android:singleLine="true"
                            android:text="@string/common_tutor_state"
                            android:textColor="@color/bg_card2"
                            android:textSize="12sp"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical"
                    android:gravity="center">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/bg_card2"
                                android:textSize="@dimen/card2_detail_text_size"
                                android:text="TEL: "
                                />
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="139****3230"
                                android:textSize="@dimen/card2_detail_text_size"
                                android:textColor="@color/bg_card2"
                                />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="15dp"
                            >
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/bg_card2"
                                android:textSize="@dimen/card2_detail_text_size"
                                android:text="EMAIL: "
                                />
                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="dilan@126.com"
                                android:textSize="@dimen/card2_detail_text_size"
                                android:textColor="@color/bg_card2"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ADD: "
                            android:textColor="@color/bg_card2"
                            android:textSize="@dimen/card2_detail_text_size"/>
                    <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/common_university_add"
                            android:textColor="@color/bg_card2"
                            android:textSize="@dimen/card2_detail_text_size"/>

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>


</LinearLayout>